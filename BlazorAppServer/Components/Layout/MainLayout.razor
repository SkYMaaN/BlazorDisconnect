@inherits LayoutComponentBase

<div class="page">

    <div id="reconnect-modal" style="display: none;"></div>
    <div id="overlayDiv" onclick="handleOverlayClick();" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; z-index: 10000; background-color: rgba(0 ,0, 0, 0.2);" />
    <button id="reloadButton" class="btn btn-primary" type="button" onclick="location.reload();" style="display: none; position: fixed; bottom: 20px; right: 20px; z-index: 11000;">Reload Page</button>

    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
